# Nom du fichier JSON contenant l'historique des vols
FLIGHTS_HISTORY_FILE=flights_history.json

# Nom du fichier JSON listant les vols ancrés
ANCHOR_FILE=anchored.json

# Répertoire dans lequel seront stockés les dossiers d’ancrage
ANCHORED_DIR=anchored


